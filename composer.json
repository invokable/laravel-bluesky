{
    "name": "revolution/laravel-bluesky",
    "description": "Bluesky(AT Protocol) for Laravel",
    "keywords": [
        "laravel",
        "bluesky",
        "atproto",
        "socialite",
        "notifications",
        "feed-generator",
        "labeler"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.30",
        "laravel/socialite": "^5.16",
        "guzzlehttp/guzzle": "^7.8",
        "firebase/php-jwt": "^6.10",
        "phpseclib/phpseclib": "^3.0",
        "revolution/atproto-lexicon-contracts": "1.0.42",
        "yocto/yoclib-multibase": "^1.2",
        "jetbrains/phpstorm-attributes": "^1.2"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "larastan/larastan": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "workerman/workerman": "^5.0",
        "revolt/event-loop": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Revolution\\Bluesky\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "suggest": {
        "ext-pcntl": "*",
        "ext-gmp": "*",
        "workerman/workerman": "Required to use WebSocket.",
        "revolt/event-loop": "Required to use WebSocket."
    },
    "authors": [
        {
            "name": "kawax",
            "email": "kawaxbiz@gmail.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Revolution\\Bluesky\\Providers\\BlueskyServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "post-update-cmd": [
            "@php vendor/bin/testbench bluesky:lexicon-client"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "@php vendor/bin/phpunit"
        ]
    }
}
